<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin" tools:context=".MainActivity">

    <Space
        android:layout_width="250px"
        android:layout_height="200px"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:background="#ffff5b5d"
        android:visibility="visible"
        android:id="@+id/box1" />

    <Space
        android:layout_width="fill_parent"
        android:layout_height="350px"
        android:layout_alignParentTop="true"
        android:layout_toRightOf="@+id/box1"
        android:layout_toEndOf="@+id/box1"
        android:id="@+id/box2"
        android:visibility="visible"
        android:background="#ffff5b5d" />

    <Space
        android:layout_width="fill_parent"
        android:layout_height="250px"
        android:layout_below="@+id/box2"
        android:layout_alignRight="@+id/box2"
        android:layout_alignEnd="@+id/box2"
        android:id="@+id/box3"
        android:visibility="visible"
        android:background="#ffffffff" />

    <Space
        android:layout_width="250px"
        android:layout_height="fill_parent"
        android:layout_below="@+id/box1"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:id="@+id/box4"
        android:visibility="visible"
        android:background="#ffff5b5d" />

    <Space
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_below="@+id/box3"
        android:layout_toRightOf="@+id/box4"
        android:layout_toEndOf="@+id/box4"
        android:id="@+id/box5"
        android:visibility="visible"
        android:background="#ffff5b5d" />

    <SeekBar
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/seekBar"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignRight="@+id/box5"
        android:layout_alignEnd="@+id/box5" />
</RelativeLayout>
